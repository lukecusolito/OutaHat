<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OutaHat.Views.Pages.AboutPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Author}" Placeholder="Authors Name" />
            <Label Text="{Binding DisplayMessage}" />
            <Button Text="Coffee" Command="{Binding BuyMeACoffeeCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>